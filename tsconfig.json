{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "pages/api/auth/[...nextauth].ts", "pages/login.tsx", "src/components/commons/Buttons.tsx", "src/middleware/init-middleware.ts", "src/middleware/validate-middleware.ts", "src/helpers/bcrypt.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
